@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card authLayout">
            <div>
                <ul class="nav nav-tabs extention nav-fill" style="outline: none;">
                    <li class="nav-item">
                        <a class="nav-link custom ex1" href="/Identity/Account/Login">Log ind</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link custom ex1" href="/Identity/Account/Register">Opret bruger</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{ 
    @RenderSection("Scripts", required: false)

    <script>
        $(function() {
            var current = location.pathname;
            $('.nav-tabs li a').each(function() {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            });
        })
    </script>
}