@page
@using System.Linq
@using System.Security.Cryptography.X509Certificates
@using TestAfLogin.Models
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Identity/_AuthLayout.cshtml";
}


    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger"></div>

        <label>* Skal udfyldes</label>

        <div class="form-group">
            <label>Fulde navn *</label>
            <input asp-for="Input.Name" class="form-control" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email * (kun au-id)</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="email">
                <label>&#64uni.au.dk</label>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Kodeord *</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Gentag kodeord *</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Fødselsdagdato</label>
                    <input placeholder="dd-mm-yyyy" asp-for="Input.Birthday" class="form-control" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Telefonnummer *</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Semester</label>
                    <input asp-for="Input.Term" class="form-control" />
                    <span asp-validation-for="Input.Term" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div style="margin-left: 14px; margin-bottom: 20px;">
                    <div>
                        <label>Fakultet *</label>
                    </div>
                    <div>
                        <select asp-for="Input.Faculty" asp-items="Model.Fac.FacList">
                            <option selected disabled value="">Vælg</option>
                        </select>
                        <span asp-validation-for="Input.Faculty" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group" >
            <div>
                        <label>Studieretning *</label>
            </div>
            <div>
                <select asp-for="Input.FieldOfStudy" asp-items="Model.Fos.FosList">
                    <option selected disabled value="">Vælg</option>
                </select>
                <span asp-validation-for="Input.FieldOfStudy" class="text-danger"></span>
            </div>
        </div>

            <div class="column">
                <div>
                    <label class="control-label">Indsæt profilbillede</label>
                </div>
                <div style="margin-bottom: 40px;">
                    <input asp-for="Input.ImageFile" accept="image/*" />
                    <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
                </div>
            </div>

            <center>
                <button type="submit" class="btn btn-primary btn-block">Opret bruger</button>
            </center>


    </form>

    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
